---
import Layout from '../Layout/Layout.astro';
import Carousel from '../components/Carousel.jsx';
import PartnerCarousel from '../components/PartnerCarousel.jsx';

// pillars
const pillars = [
  {
    id: '01', // Matches Maternity & Neonatal
    sector: 'Maternity & Neonatal',
    desc: 'Dedicated to the safety and comfort of mother and child.',
    tags: ['Private Suites', 'Antenatal', 'Neonatal Unit'],
    color: 'bg-[#1565c0]', // Primary Blue
    span: 'md:col-span-2',
  },
  {
    id: '02', // Matches Medical & Surgical
    sector: 'Medical & Surgical',
    desc: 'Superior surgical outcomes through precision clinical protocol.',
    tags: ['Major Theatre', 'Post-Op Ward'],
    color: 'bg-[#125276]', // Deep Blue
    span: 'md:col-span-1',
  },
  {
    id: '03', // Matches Physiotherapy & Rehab
    sector: 'Physiotherapy & Rehab',
    desc: 'Restoring mobility and independence through clinical therapy.',
    tags: ['Orthopedic', 'Stroke Care', 'Occupational'],
    color: 'bg-[#125276]', // Deep Blue
    span: 'md:col-span-1',
  },
  {
    id: '04', // Matches Diagnostics & Imaging
    sector: 'Diagnostics & Imaging',
    desc: 'Precision data to drive accurate clinical decisions.',
    tags: ['Digital X-Ray', 'Ultrasound', 'Lab'],
    color: 'bg-[#125276]', // Deep Blue
    span: 'md:col-span-1',
  },
  {
    id: '05', // Matches Pharmacy & Wellness
    sector: 'Pharmacy & Wellness',
    desc: 'Fully stocked pharmaceutical care available 24/7.',
    tags: ['24hr Dispensing', 'Chronic Care'],
    color: 'bg-[#860f0f]', // Accent Red
    span: 'md:col-span-1',
  },
];

// Blog
const updates = [
  {
    date: '04',
    month: 'Feb',
    year: '2026',
    category: 'Clinical Update',
    title: 'New Specialist Services in Physiotherapy Unit',
    excerpt:
      'We have expanded our rehabilitation department with dedicated stroke recovery equipment...',
    slug: '/news/physio-update',
  },
  {
    date: '28',
    month: 'Jan',
    year: '2026',
    category: 'Mission Outreach',
    title: 'Free Maternal Health Camp: Asumbi Region',
    excerpt:
      'Over 200 mothers received prenatal screenings during our quarterly community outreach initiative...',
    slug: '/news/maternal-camp',
  },
  {
    date: '15',
    month: 'Jan',
    year: '2026',
    category: 'Infrastructure',
    title: 'Digital X-Ray System Fully Operational',
    excerpt:
      'Our diagnostic center has successfully transitioned to a fully digital imaging workflow for faster results...',
    slug: '/news/digital-xray',
  },
];
---

<Layout title="St Paul's Mission Hospital">
  <Carousel client:load />
  <main class='pt-5'>
    <!-- About Us Section -->
