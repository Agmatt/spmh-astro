---
import Layout from '../Layout/Layout.astro';
import Carousel from '../components/Carousel.jsx';
import PartnerCarousel from '../components/PartnerCarousel.jsx';
---

<Layout title="St Paul's Mission Hospital">
  <Carousel client:load />
  <main class='pt-5'>
    <!-- About Us Section -->
    <section id='about' class='container mx-auto px-4 py-6 max-w-6xl'>
      <div
        class='bg-white flex flex-col lg:flex-row items-center gap-8'
        data-aos='fade-up'>
        <div class='lg:w-1/2'>
          <h2 class='text-4xl font-extrabold mb-4 spacer-end'>
            A Legacy of Care
          </h2>
          <p class='text-gray-700 text-lg leading-relaxed mb-6'>
            For over 40 years, our hospital has been a beacon of health and hope
            in the community. Our mission is to provide compassionate,
            high-quality, and accessible healthcare to all, serving in the
            spirit of Christ's love. We are dedicated to your well-being,
            offering a healing environment where every patient is treated with
            dignity and respect.
          </p>
          <a href='/about-us/' class='btn-primary my-5'>Learn More</a>
        </div>
        <div
          class='lg:w-1/2 w-full mt-8 lg:mt-0'
          data-aos='fade-left'
          data-aos-delay='200'>
          <img
            src='/img/13.jpg'
            alt='A doctor interacting with a patient.'
            class='w-full h-auto object-cover'
          />
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id='services' class='bg-teal-100 mx-auto px-4 py-16 w-full'>
      <header class='text-center mb-12' data-aos='fade-up'>
        <h2 class='text-4xl font-extrabold mb-4 spacer-center'>Our Services</h2>
        <p class='text-lg text-gray-600 pt-8 py-3'>
          Comprehensive care tailored for you and your family.
        </p>
      </header>

      <!-- Service Cards -->
      <div
        class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12'
        data-aos='fade-up'
        data-aos-delay='200'>
        <!-- General Medicine -->
        <div
          class='bg-white border-l-4 border-r-4 border-primary p-8 rounded-xl shadow-lg flex flex-col items-center text-center hover:shadow-2xl transition duration-300 transform hover:-translate-y-2'>
          <h3 class='text-xl font-bold mb-2'>General Medicine</h3>
          <p class='text-gray-600'>
            Routine check-ups and long-term care for all ages, guided by trusted
            doctors.
          </p>
        </div>

        <!-- Emergency -->
        <div
          class='bg-white border-l-4 border-r-4 border-accent p-8 rounded-xl shadow-lg flex flex-col items-center text-center hover:shadow-2xl transition duration-300 transform hover:-translate-y-2'>
          <h3 class='text-xl font-bold mb-2'>Emergency Care</h3>
          <p class='text-gray-600'>
            Our 24/7 emergency team is always ready for urgent and life-saving
            care.
          </p>
        </div>

        <!-- Surgery -->
        <div
          class='bg-white border-l-4 border-r-4 border-secondary p-8 rounded-xl shadow-lg flex flex-col items-center text-center hover:shadow-2xl transition duration-300 transform hover:-translate-y-2'>
          <h3 class='text-xl font-bold mb-2'>Surgical Services</h3>
          <p class='text-gray-600'>
            Safe surgical procedures with advanced technology and compassionate
            recovery.
          </p>
        </div>
      </div>

      <!-- Section CTA -->
      <div class='text-center' data-aos='fade-up' data-aos-delay='400'>
        <a href='/services/clinical' class='btn-secondary'> Find Out More → </a>
      </div>
    </section>

    <section id='about' class='py-20 bg-white'>
      <div
        class='container mx-auto px-2 lg:px-0 w-full grid lg:grid-cols-2 gap-12 items-center'>
        <!-- Image -->
        <div class='relative'>
          <img
            src='/img/28.jpg'
            alt='St. Paul’s Mission Hospital'
            class='w-full h-full object-cover'
          />
        </div>

        <!-- Text -->
        <div>
          <h2 class='text-4xl font-extrabold text-primary mb-6'>
            Professional & Trustworthy
          </h2>
          <p class='text-lg text-gray-700 leading-relaxed mb-6'>
            St. Paul’s Mission Hospital is dedicated to delivering reliable,
            accessible, and holistic healthcare. With a skilled medical team,
            modern practices, and a commitment to community wellbeing, we ensure
            every patient receives care that transforms lives.
          </p>
          <a
            href='/services/clinical'
            class='inline-block bg-primary text-white px-6 py-3 rounded-full font-semibold hover:bg-secondary transition'>
            Learn More
          </a>
        </div>
      </div>
    </section>

    <section class='py-20 bg-white'>
      <div class='container mx-auto px-4 md:px-4 lg:px-12 text-center'>
        <h2 class='text-4xl font-extrabold text-primary mb-12'>
          Why Choose Us?
        </h2>
        <div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8'>
          <!-- Card 1 -->
          <div
            class='bg-gray-50 rounded-xl shadow-md p-8 hover:shadow-xl transition'>
            <h3 class='text-xl font-bold text-secondary mb-3'>
              Compassionate Care
            </h3>
            <p class='text-gray-600'>
              We treat every patient with dignity, love, and Christ-centered
              compassion.
            </p>
          </div>
          <!-- Card 2 -->
          <div
            class='bg-gray-50 rounded-xl shadow-md p-8 hover:shadow-xl transition'>
            <h3 class='text-xl font-bold text-secondary mb-3'>Expert Team</h3>
            <p class='text-gray-600'>
              Our staff includes skilled doctors, nurses, and specialists
              dedicated to excellence.
            </p>
          </div>
          <!-- Card 3 -->
          <div
            class='bg-gray-50 rounded-xl shadow-md p-8 hover:shadow-xl transition'>
            <h3 class='text-xl font-bold text-secondary mb-3'>
              Affordable Services
            </h3>
            <p class='text-gray-600'>
              We provide high-quality care that is accessible and affordable for
              the community.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Reports Section -->
    <section class='py-16 bg-gray-100'>
      <div class='mx-auto px-2 md:px:4'>
        <header class='mb-12' data-aos='fade-up'>
          <h2 class='text-4xl font-extrabold mb-2 spacer-end'>
            Featured Reports & Updates
          </h2>
          <p class='text-lg text-gray-600'>
            Stay informed about our latest news.
          </p>
        </header>
        <div
          class='flex flex-col lg:flex-row lg:space-x-10 space-y-8 lg:space-y-0'
          data-aos='fade-up'
          data-aos-delay='200'>
          <!-- Report Card 1 -->
          <div
            class='flex-1 bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/18.jpg'
              alt='Groundbreaking ceremony image'
              class='rounded-t-xl w-full h-64 object-cover'
            />
            <div class='p-6'>
              <h3 class='text-xl font-bold text-[#1565C0] mb-2'>
                Groundbreaking for New Wing
              </h3>
              <p class='text-gray-600 text-sm mb-4'>October 26, 2025</p>
              <p class='text-gray-700'>
                We are thrilled to announce the groundbreaking celebration for
                our new surgical and maternity wing. This expansion will allow
                us to provide even more comprehensive care to our community.
              </p>
              <a href='#' class='mt-4 btn-secondary'>Read More &rarr;</a>
            </div>
          </div>
          <!-- Report Card 2 -->
          <div
            class='flex-1 bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/20.jpg'
              alt='Newsletter image'
              class='rounded-t-xl w-full h-64 object-cover'
            />
            <div class='p-6'>
              <h3 class='text-xl font-bold text-[#1565C0] mb-2'>
                Introducing Our Newsletter
              </h3>
              <p class='text-gray-600 text-sm mb-4'>October 15, 2025</p>
              <p class='text-gray-700'>
                Stay connected with our hospital community! For the first time,
                we are launching a newsletter to bring you the latest health
                tips, hospital news, and event announcements directly to your
                inbox.
              </p>
              <a href='#' class='mt-4 btn-secondary'>Read More &rarr;</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Reports Section -->
    <section class='py-16 bg-gray-100'>
      <div class='mx-auto px-4 max-w-7xl'>
        <header class='mb-12 text-center' data-aos='fade-up'>
          <h2 class='text-4xl font-extrabold mb-2 text-gray-900'>
            Featured Reports & Updates
          </h2>
          <p class='text-lg text-gray-600'>
            Stay informed about our latest news.
          </p>
        </header>

        <!-- Grid for 4 compact cards -->
        <div
          class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8'
          data-aos='fade-up'
          data-aos-delay='200'>
          <!-- Card Template -->
          <div
            class='bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/18.jpg'
              alt='Groundbreaking ceremony'
              class='rounded-t-xl w-full h-40 object-cover'
            />
            <div class='p-4'>
              <h3 class='text-lg font-bold text-[#1565C0] mb-1'>
                New Wing Groundbreaking
              </h3>
              <p class='text-gray-600 text-xs mb-2'>Oct 26, 2025</p>
              <p class='text-gray-700 text-sm line-clamp-3'>
                We are thrilled to announce the groundbreaking celebration for
                our new surgical and maternity wing.
              </p>
              <a
                href='#'
                class='mt-3 inline-block text-[#1565C0] text-sm font-medium hover:underline'
                >Read More →</a
              >
            </div>
          </div>

          <!-- Card 2 -->
          <div
            class='bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/20.jpg'
              alt='Newsletter image'
              class='rounded-t-xl w-full h-40 object-cover'
            />
            <div class='p-4'>
              <h3 class='text-lg font-bold text-[#1565C0] mb-1'>
                Our First Newsletter
              </h3>
              <p class='text-gray-600 text-xs mb-2'>Oct 15, 2025</p>
              <p class='text-gray-700 text-sm line-clamp-3'>
                Stay connected with our hospital community through our first
                newsletter launch.
              </p>
              <a
                href='#'
                class='mt-3 inline-block text-[#1565C0] text-sm font-medium hover:underline'
                >Read More →</a
              >
            </div>
          </div>

          <!-- Card 3 -->
          <div
            class='bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/21.jpg'
              alt='Health camp'
              class='rounded-t-xl w-full h-40 object-cover'
            />
            <div class='p-4'>
              <h3 class='text-lg font-bold text-[#1565C0] mb-1'>
                Community Health Camp
              </h3>
              <p class='text-gray-600 text-xs mb-2'>Sep 30, 2025</p>
              <p class='text-gray-700 text-sm line-clamp-3'>
                Hundreds of residents benefited from free consultations and
                screenings.
              </p>
              <a
                href='#'
                class='mt-3 inline-block text-[#1565C0] text-sm font-medium hover:underline'
                >Read More →</a
              >
            </div>
          </div>

          <!-- Card 4 -->
          <div
            class='bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-2'>
            <img
              src='/img/22.jpg'
              alt='Award'
              class='rounded-t-xl w-full h-40 object-cover'
            />
            <div class='p-4'>
              <h3 class='text-lg font-bold text-[#1565C0] mb-1'>
                Excellence in Patient Care
              </h3>
              <p class='text-gray-600 text-xs mb-2'>Sep 10, 2025</p>
              <p class='text-gray-700 text-sm line-clamp-3'>
                We were honored with the regional award for excellence in
                patient care.
              </p>
              <a
                href='#'
                class='mt-3 inline-block text-[#1565C0] text-sm font-medium hover:underline'
                >Read More →</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Partners -->
  <section class='py-16 bg-gray-50'>
    <div class='max-w-7xl mx-auto px-6'>
      <PartnerCarousel client:only='react' />
    </div>
  </section>

  <!-- CTA -->
  <section class='bg-gray-300 py-10 px-4 shadow-xl' data-aos='fade-up'>
    <div class='container mx-auto text-center'>
      <h2 class='text-4xl md:text-5xl font-bold mb-4'>
        Ready for Compassionate Care?
      </h2>
      <p class='text-lg md:text-xl max-w-2xl mx-auto mb-8'>
        We are here to provide exceptional medical services and support for you
        and your family.
      </p>
      <a href='/news-and-media/events' class='btn-secondary'>
        Find more about Events
      </a>
    </div>
  </section>
</Layout>
