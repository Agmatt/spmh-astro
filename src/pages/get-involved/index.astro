---
import Layout from '../../Layout/Layout.astro';
---

<Layout title='Get Involved'>
  <!-- Header section  -->
  <header
    class='relative pt-20 pb-18 min-h-[65vh] flex items-center overflow-hidden bg-slate-600'>
    <div class='absolute inset-0 z-0'>
      <div
        class='absolute inset-0 bg-fixed bg-cover bg-center bg-no-repeat grayscale-[50%] brightness-[0.35]'
        style="background-image: url('/img/54.jpg'); loading: lazy;">
      </div>
      <div
        class='absolute inset-0 bg-gradient-to-t from-slate-600 via-transparent to-transparent opacity-80'>
      </div>
    </div>

    <div class='container mx-auto px-2 md:px-4 max-w-6xl relative z-10'>
      <div class='grid lg:grid-cols-12 gap-12 lg:gap-24'>
        <div class='lg:col-span-7'>
          <h1
            class='text-5xl md:text-7xl font-black tracking-tighter text-white leading-[0.85] uppercase'>
            Join the <br />
            <span class='text-primary'>Movement</span>
          </h1>
        </div>

        <div class='lg:col-span-5 flex flex-col justify-end pb-4 text-white'>
          <div class='border-l border-white/30 pl-8'>
            <p class='text-xl md:text-2xl font-light leading-relaxed mb-6'>
              St. Paul's Mission Hospital invites <span
                class='text-white font-medium'>elite professionals</span
              > and community partners to scale our collective clinical impact.
            </p>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- cards -->
  <section class='bg-white py-24'>
    <div class='container mx-auto px-2 md:px-4 max-w-6xl'>
      <div
        class='grid grid-cols-1 lg:grid-cols-3 gap-8 border-t border-l border-b border-r border-slate-200'>
        <!-- cards -->
        {
          [
            {
              title: 'Careers',
              path: '/get-involved/careers',
              desc: 'Join our clinical or administrative teams. Explore current openings and professional growth.',
            },
            {
              title: 'Volunteer',
              path: '/get-involved/volunteer',
              desc: 'For those called to serve. Contribute your time to patient care or community outreach.',
            },
            {
              title: 'Partner',
              path: '/get-involved/partners',
              desc: 'Institutional and private sector collaboration. Building the future of regional healthcare.',
            },
          ].map((item) => (
            // grid items
            <a
              href={item.path}
              class='group relative bg-gray-300 p-6 md:p-12 transition-all duration-700 hover:bg-primary border-r border-b border-slate-200 overflow-hidden'>
              <div class='relative z-10'>
                <h2 class='text-4xl font-bold tracking-tighter text-secondary group-hover:text-white transition-colors duration-500'>
                  {item.title}
                </h2>

                <div class='grid grid-rows-[0fr] group-hover:grid-rows-[1fr] transition-all duration-500 ease-in-out group-hover:text-white'>
                  <div class='overflow-hidden'>
                    <p class='text- mt-6 text-lg leading-relaxed font-light'>
                      {item.desc}
                    </p>
                  </div>
                </div>
              </div>

              <div class='mt-12 flex items-center gap-4 transition-all duration-500'>
                {item.title === 'Careers' && (
                  <div class='flex items-center gap-3'>
                    <span class='text-[10px] font-black uppercase tracking-[0.2em] text-primary group-hover:text-white'>
                      View Vacancies
                    </span>
                    <div class='w-8 h-8 rounded-full border border-blue-600 group-hover:border-white group-hover:bg-white flex items-center justify-center transition-all'>
                      <span class='text-primary group-hover:text-slate-900 transform group-hover:translate-x-0.5 transition-transform'>
                        →
                      </span>
                    </div>
                  </div>
                )}

                {item.title === 'Volunteer' && (
                  <div class='relative py-1 overflow-hidden'>
                    <span class='text-[10px] font-black uppercase tracking-[0.2em] text-primary group-hover:text-white'>
                      Register Interest
                    </span>
                    <div class='absolute bottom-0 left-0 w-full h-[2px] bg-primary group-hover:bg-white translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-500' />
                  </div>
                )}

                {item.title === 'Partner' && (
                  <div class='flex items-center gap-2'>
                    <span class='text-[10px] font-black uppercase tracking-[0.2em] text-primary group-hover:text-white'>
                      Initiate Dialogue
                    </span>
                    <div class='flex items-center group-hover:gap-1 transition-all duration-300 text-primary group-hover:text-white'>
                      <span class='opacity-0 group-hover:opacity-100 transition-opacity'>
                        →
                      </span>
                    </div>
                  </div>
                )}
              </div>

              <div class='absolute -bottom-10 -right-10 text-[12rem] font-black text-slate-50 opacity-[0.03] group-hover:opacity-[0.05] transition-opacity pointer-events-none'>
                {item.title[0]}
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Footer -->
  <section class='bg-white pb-24 border-t border-slate-100'>
    <div class='container mx-auto px-2 md:px-4 max-w-6xl'>
      <div class='grid grid-cols-1 md:grid-cols-12 gap-12 pt-16'>
        <div class='md:col-span-5'>
          <div class='flex items-center gap-3 mb-6'>
            <div class='w-1.5 h-1.5 bg-blue-600 rounded-full'></div>
            <span
              class='text-[10px] font-black uppercase tracking-[0.4em] text-slate-900'
              >Institutional Governance</span
            >
          </div>
          <p class='text-sm text-slate-500 leading-relaxed font-light'>
            St. Paul’s Mission Hospital operates under the governed framework of
            the <span class='text-slate-900 font-medium'
              >Diocese of Southern Nyanza</span
            >. All involvement—whether clinical, financial, or voluntary—is
            vetted through our internal Ethics and Clinical Governance Committee
            to ensure the highest standard of regional patient care.
          </p>
        </div>

        <div
          class='md:col-span-7 grid grid-cols-2 md:grid-cols-3 gap-8 md:pl-12 md:border-l border-slate-100'>
          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Compliance</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              ISO 9001:2015 <br />Standards
            </p>
          </div>

          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Status</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              Registered FBO <br />Non-Profit
            </p>
          </div>

          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Audit cycle</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              Annual External <br />Verification
            </p>
          </div>

          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Data privacy</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              GDPR & KDPP <br />Compliant
            </p>
          </div>

          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Authority</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              KMPDC <br />Certified
            </p>
          </div>

          <div class='space-y-2'>
            <span
              class='text-[9px] font-mono uppercase tracking-widest text-slate-400 block'
              >Transparency</span
            >
            <p
              class='text-[11px] font-bold text-slate-900 uppercase leading-tight'>
              Open Governance <br />Framework
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
