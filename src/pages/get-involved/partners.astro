  <section id='inquiry' class='py-24 bg-slate-900 text-white'>
    <div class='container mx-auto px-6 max-w-4xl'>
      <div class='mb-16'>
        <span
          class='text-[10px] font-mono text-blue-500 uppercase tracking-[0.4em] mb-4 block'
          >Official Channel</span
        >
        <h2 class='text-4xl font-black uppercase tracking-tighter mb-4'>
          Request Institutional Briefing
        </h2>
        <p class='text-slate-400 font-light'>
          For Corporate, NGO, and Governmental entities seeking strategic
          dialogue.
        </p>
      </div>

      <form class='grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8'>
        <div class='flex flex-col gap-3'>
          <label
            class='text-[9px] font-black uppercase tracking-widest text-slate-500'
            >Contact Official</label
          >
          <input
            type='text'
            placeholder='Full Name & Title'
            class='bg-transparent border-b border-slate-700 py-3 outline-none focus:border-blue-500 text-sm'
          />
        </div>
        <div class='flex flex-col gap-3'>
          <label
            class='text-[9px] font-black uppercase tracking-widest text-slate-500'
            >Organization Name</label
          >
          <input
            type='text'
            placeholder='Agency / Foundation / Corp'
            class='bg-transparent border-b border-slate-700 py-3 outline-none focus:border-blue-500 text-sm'
          />
        </div>
        <div class='flex flex-col gap-3 md:col-span-2'>
          <label
            class='text-[9px] font-black uppercase tracking-widest text-slate-500'
            >Collaboration Intent</label
          >
          <textarea
            rows='3'
            placeholder='Briefly describe the proposed synergy...'
            class='bg-transparent border-b border-slate-700 py-3 outline-none focus:border-blue-500 text-sm resize-none'
          ></textarea>
        </div>
        <div class='md:col-span-2 pt-8'>
          <button
            class='bg-white text-slate-900 w-full py-6 text-[10px] font-black uppercase tracking-[0.4em] hover:bg-blue-600 hover:text-white transition-all'>
            Initiate Protocol
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>
