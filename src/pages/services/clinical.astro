---
import Layout from '../../Layout/Layout.astro';
// Services Data
const services = [
  {
    id: 'surgical',
    title: 'Medical & Surgical',
    image: '/img/15.jpg',
    loading: 'lazy',
    lead: 'Superior surgical outcomes through precision technology.',
    description:
      'Our unit features high-end theaters equipped for both minor and major procedures. We maintain a strict protocol for sterilization and post-operative recovery.',
    highlights: [
      'General Surgery',
      'Specialized Theatre',
      'In-patient Wards',
      '24/7 Nursing',
    ],
    meta: 'Clinical',
  },
  {
    id: 'maternity',
    title: 'Maternity & Neonatal',
    image: '/img/49.jpg',
    loading: 'lazy',
    lead: 'Dedicated to the safety and comfort of mother and child.',
    description:
      'A comprehensive maternity wing offering a serene environment for delivery. We provide integrated care from prenatal clinics to neonatal intensive care support.',
    highlights: [
      'Private Delivery Suites',
      'Antenatal Care',
      'Immunization',
      'Neonatal Unit',
    ],
    meta: 'Life',
  },
  {
    id: 'diagnostics',
    title: 'Diagnostics & Imaging',
    image: '/img/2.jpg',
    loading: 'lazy',
    lead: 'Precision data to drive accurate clinical decisions.',
    description:
      'Equipped with automated pathology systems and digital imaging, our lab provides rapid, reliable results to support all hospital departments.',
    highlights: ['X-Ray', 'Ultrasound', 'Specialized Lab'],
    meta: 'Technical',
  },
  {
    id: 'pharmacy',
    title: 'Pharmacy & Wellness',
    image: '/img/11.jpg',
    loading: 'lazy',
    lead: 'Fully stocked pharmaceutical care available 24/7.',
    description:
      'Our pharmacy ensures the availability of essential medicines while providing professional clinical counseling on drug administration.',
    highlights: [
      'In-patient Dispensing',
      'Chronic Med Management',
      'Drug Counseling',
      '24hr Availability',
    ],
    meta: 'Supply',
  },
];
---

<Layout title='Clinical Services'>
  <!-- Hero Section -->
<!-- Hero section -->
<section
  id='about'
  class='relative w-full h-[45vh] sm:h-[65vh] overflow-hidden bg-slate-900'>
  
  <div class='absolute inset-0'>
    <img
      src='/img/21.jpg'
      alt='Hospital Exterior'
      loading='eager' 
      class='w-full h-full object-cover opacity-80 scale-105 transition-transform duration-[3000ms]'
      style="object-position: center 15%;" 
    />
    </div>

  <div class='absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent'></div>

  <div class='relative z-10 h-full container mx-auto px-6 max-w-7xl flex flex-col justify-end pb-12 sm:pb-20'>

    <h1
      class='text-4xl sm:text-6xl lg:text-7xl font-bold text-white tracking-tighter leading-[0.85]'
      data-aos='fade-up'
      data-aos-delay='100'>
      <span class='font-bold opacity-90 text-blue-100'>Services</span>
    </h1>
  </div>
</section>



