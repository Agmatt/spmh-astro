  <!-- Services -->
  <section class='bg-white'>
    <div class='flex flex-col lg:flex-row min-h-screen'>
      <aside
        class='lg:w-[40%] bg-slate-50 border-r border-slate-100 p-8 md:p-16 lg:sticky lg:top-0 lg:h-screen flex flex-col justify-between'>
        <div>
          <span
            class='text-[10px] font-black uppercase tracking-[0.5em] text-primary mb-12 block'
            >Hospital Capability Index</span
          >
          <nav class='space-y-4'>
            {
              services.map((s) => (
                <a
                  href={`#${s.id}`}
                  class='group flex items-center justify-between py-4 border-b border-slate-200 transition-all hover:border-primary'>
                  <div class='flex items-center gap-6'>
                    <span class='text-xs font-mono text-slate-300 group-hover:text-primary-500'>
                      {/* {s.meta.split(' // ')[0]} */}
                    </span>
                    <span class='text-2xl font-bold text-secondary tracking-tighter'>
                      {s.title}
                    </span>
                  </div>
                  <span class='opacity-0 group-hover:opacity-100 transition-opacity text-primary-500'>
                    â†’
                  </span>
                </a>
              ))
            }
          </nav>
        </div>

        <div class='hidden lg:block'>
          <p
            class='text-xs font-bold text-slate-400 uppercase tracking-widest leading-loose'>
            Accredited Healthcare Services<br />
          </p>
        </div>
      </aside>

      <main class='lg:w-[60%] p-8 md:p-20 space-y-32'>
        {
          services.map((s) => (
            <article id={s.id} class='scroll-mt-32'>
              <div class='mb-12'>
                <h2 class='text-5xl md:text-7xl font-bold tracking-tighter mb-6'>
                  {s.title}
                </h2>
                <p class='text-2xl text-slate-500 font-light leading-snug'>
                  {s.lead}
                </p>
              </div>

              <div class='grid grid-cols-1 md:grid-cols-2 gap-12 border-t border-slate-100 pt-12'>
                <div class='space-y-6'>
                  <h4 class='text-xs font-black uppercase tracking-widest text-slate-400'>
                    Description
                  </h4>
                  <p class='text-slate-600 leading-relaxed font-light'>
                    {s.description}
                  </p>
                </div>

                <div class='space-y-6'>
                  <h4 class='text-xs font-black uppercase tracking-widest text-slate-400'>
                    Core Services
                  </h4>
                  <ul class='space-y-3'>
                    {s.highlights.map((h) => (
                      <li class='flex items-center gap-3 text-sm font-bold text-slate-800'>
                        <span class='h-1.5 w-1.5 bg-primary rounded-full' />
                        {h}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              <div class='mt-12 h-80 md:h-[450px] bg-slate-100 rounded-[2rem] overflow-hidden relative group/img cursor-pointer'>
                <img
                  src={s.image}
                  alt={s.title}
                  class='w-full h-full object-cover  transition-all duration-1000 ease-in-out group-hover/img:grayscale-0 group-hover/img:scale-105'
                />
                </div>
              </div>
            </article>
          ))
        }
      </main>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class='py-16 bg-gray-200 text-center'>
    <div class='container mx-auto px-4'>
      <h2 class='text-3xl sm:text-4xl font-bold mb-4'>
        Ready to Schedule an Appointment?
      </h2>
      <p class='text-lg mb-8'>
        Our team is here to answer your questions and help you book a
        consultation.
      </p>
      <a
        href='/about-us/contact'
        class='btn-primary transition-all duration-300'>
        Contact Us
      </a>
    </div>
  </section>
</Layout>
