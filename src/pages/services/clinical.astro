---
import Layout from '../../Layout/Layout.astro';

const services = [
  {
    id: '01', // Matches Home Page
    title: 'Maternal & Neonatal',
    image: '/img/49.jpg',
    lead: 'Dedicated to the safety and comfort of mother and child.',
    description:
      'A comprehensive maternity wing offering a serene environment for delivery. We provide integrated care from prenatal clinics to neonatal intensive care support.',
    highlights: [
      'Private Delivery Suites',
      'Antenatal Care',
      'Immunization',
      'Neonatal Unit',
    ],
    meta: 'Life',
  },
  {
    id: '02',
    title: 'Medical & Surgical',
    image: '/img/15.jpg',
    lead: 'Superior surgical outcomes through precision technology.',
    description:
      'Our unit features high-end theaters equipped for both minor and major procedures. We maintain a strict protocol for sterilization and post-operative recovery.',
    highlights: [
      'General Surgery',
      'Specialized Theatre',
      'In-patient Wards',
      '24/7 Nursing',
    ],
    meta: 'Clinical',
  },
  {
    id: '03', // NEW: Physiotherapy Addition
    title: 'Physiotherapy & Rehab',
    image: '/img/43.jpg',
    lead: 'Restoring mobility and independence through clinical therapy.',
    description:
      'Our rehabilitation department focuses on physical restoration following injury, surgery, or neurological events. We utilize evidence-based exercises to help patients return to their daily lives.',
    highlights: [
      'Orthopedic Rehab',
      'Stroke Management',
      'Occupational Therapy',
      'Pain Management',
    ],
    meta: 'Recovery',
  },
  {
    id: '04',
    title: 'Diagnostics & Imaging',
    image: '/img/2.jpg',
    lead: 'Precision data to drive accurate clinical decisions.',
    description:
      'Equipped with automated pathology systems and digital imaging, our lab provides rapid, reliable results to support all hospital departments.',
    highlights: ['Digital X-Ray', 'Ultrasound', 'Specialized Lab', 'Pathology'],
    meta: 'Technical',
  },
  {
    id: '05',
    title: 'Pharmacy & Wellness',
    image: '/img/11.jpg',
    lead: 'Fully stocked pharmaceutical care available 24/7.',
    description:
      'Our pharmacy ensures the availability of essential medicines while providing professional clinical counseling on drug administration and chronic care management.',
    highlights: [
      'In-patient Dispensing',
      'Chronic Med Management',
      'Drug Counseling',
      '24hr Availability',
    ],
    meta: 'Supply',
  },
];
---

<Layout title='Our Services'>
  <section
    class='relative pt-2 md:pt-0 pb-2 md:pb-0 bg-slate-200 overflow-hidden'>
    <div class='container mx-auto px-2 md:px-4 max-w-7xl relative z-10'>
      <div class='grid lg:grid-cols-2 gap-16 items-center'>
        <div class='order-2 lg:order-1'>
          <h1
            class='text-5xl md:text-7xl font-extrabold text-[#125276] leading-[1.1] mb-8 tracking-tight'>
            Caring with Grace, <br />
            <span class='text-[#1565c0]'>Professional Care</span>
          </h1>

          <p class='text-lg text-slate-700 leading-relaxed max-w-lg mb-10'>
            At St. Paul's, we believe in treating every person with kindness and
            professional care.
          </p>
          <p class='text-lg text-slate-700 leading-relaxed max-w-lg mb-10'>
            We are dedicated to supporting the health and well-being of our
            families through reliable and gentle medical services.
          </p>
        </div>

        <div class='order-1 lg:order-2 relative'>
          <div class='relative z-10 overflow-hidden shadow-2xl'>
            <img
              src='/img/10.jpg'
              alt='St. Pauls Infrastructure'
              class='w-full aspect-[7/5] object-cover'
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class='bg-white'>
    <div class='flex flex-col lg:flex-row max-w-7xl mx-auto px-2 md:px-4'>
      <aside
        class='lg:w-[35%] bg-slate-50 border-r border-slate-100 px-2 md:px-4 py-8 md:p-16 lg:sticky lg:top-0 lg:h-screen flex flex-col justify-between'>
        <div>
          <nav class='space-y-2'>
            {
              services.map((s) => (
                <a
                  href={`#${s.id}`}
                  class='group flex items-center justify-between py-4 border-b border-slate-200 transition-all hover:border-[#1565c0]'>
                  <div class='flex items-center gap-4'>
                    <span class='text-[10px] font-mono text-slate-400 group-hover:text-[#1565c0]'>
                      {s.id}
                    </span>
                    <span class='text-xl font-black text-[#125276] tracking-tighter uppercase group-hover:text-[#1565c0]'>
                      {s.title}
                    </span>
                  </div>
                  <span class='opacity-0 group-hover:opacity-100 transition-opacity text-[#1565c0]'>
                    â†’
                  </span>
                </a>
              ))
            }
          </nav>
        </div>
      </aside>

      <main class='lg:w-[65%] px-2 md:px-4 py-8 md:py-14 space-y-32 bg-white'>
        {
          services.map((s) => (
            <article id={s.id} class='scroll-mt-24 group'>
              <div class='mb-12'>
                <div class='flex items-center gap-4 mb-4'>
                  <span class='text-[10px] font-mono font-bold text-[#1565c0] bg-blue-50 px-2 py-1 uppercase tracking-widest'>
                    {s.meta} Unit
                  </span>
                  <div class='h-px flex-grow bg-slate-100' />
                </div>
                <h2 class='text-3xl md:text-5xl font-black text-slate-900 tracking-tighter uppercase leading-none mb-6 group-hover:text-[#1565c0] transition-colors'>
                  {s.title}
                </h2>
                <p class='text-2xl text-slate-500 font-light leading-snug max-w-2xl italic'>
                  "{s.lead}"
                </p>
              </div>

              <div class='grid grid-cols-1 md:grid-cols-2 gap-12 border-t border-slate-100 pt-12'>
                <div class='space-y-6'>
                  <h4 class='text-[10px] font-black uppercase tracking-widest text-[#125276]'>
                    Infrastructure & Scope
                  </h4>
                  <p class='text-slate-600 leading-relaxed font-light text-lg'>
                    {s.description}
                  </p>
                </div>

                <div class='space-y-6'>
                  <h4 class='text-[10px] font-black uppercase tracking-widest text-[#125276]'>
                    Core Services
                  </h4>
                  <ul class='grid grid-cols-1 gap-3'>
                    {s.highlights.map((h) => (
                      <li class='flex items-center gap-3 text-xs font-black uppercase tracking-widest text-slate-800'>
                        <span class='h-1.5 w-1.5 bg-[#860f0f] rounded-full' />
                        {h}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              <div class='mt-12 aspect-video bg-slate-100 overflow-hidden relative border border-slate-200'>
                <img
                  src={s.image}
                  alt={s.title}
                  loading='lazy'
                  class='w-full h-full object-cover transition-all duration-700'
                />
              </div>
            </article>
          ))
        }
      </main>
    </div>
  </section>

  <section class='py-14 md:py-18 bg-slate-600 relative overflow-hidden'>
    <!-- CTA -->
    <div
      class='container mx-auto px-6 max-w-4xl text-center text-white relative z-10'>
      <h2
        class='text-4xl md:text-6xl text-white font-black mb-6 uppercase tracking-tighter'>
        Patient Care is <br />
        <span class='text-white'>Our Priority</span>
      </h2>
      <p class='text-xl mb-12 font-light'>
        Our clinical team is ready to assist you 24/7. Contact us for inquiries
        or to schedule a consultation.
      </p>
      <div class='flex flex-wrap justify-center gap-4'>
        <a
          href='#'
          class='bg-[#1565c0] hover:bg-white hover:text-[#1565c0] text-white px-10 py-5 text-[10px] font-black uppercase tracking-widest transition-all'>
          Consult a Specialist
        </a>
        <a
          href='tel:+254111817447'
          class='border border-white/20 hover:bg-secondary text-white px-10 py-5 text-[10px] font-black uppercase tracking-widest transition-all'>
          Emergency: 24/7 Line
        </a>
      </div>
    </div>
  </section>
</Layout>
