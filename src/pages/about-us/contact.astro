---
import Layout from '../../Layout/Layout.astro';
---

<Layout title='Contact Us'>
  <!-- Header -->
  <header class='relative bg-gray-200 text-center'>
    <div class='container mx-auto py-10 px-2 md:px-4'>
      <h1 class='text-4xl font-extrabold leading-tight'>
        Get in touch with SPMH
      </h1>
    </div>
  </header>
 

  <main class='pt-5 pb-8 md:py-10 bg-white rounded-lg'>
    <section class='py-8 px-4'>
      <div class='container bg-white mx-auto px-2 md:px-4 max-w-6xl'>
        <h1 class='text-xl text-secondary font-bold'>How Can We Assist You?</h1>
        <p class='py-4 text-md leading-relaxed line-height-md'>
          Whether you need information about our <span class="font-bold">medical services</span> , have <span class="font-bold">patient
          inquiries</span> , or require <span class="font-bold">emergency services</span> , St Pau'ls Mission Hospital
          is here for you. Reach out to us through the details below or fill out our
          contact form for personalized assistance.
        </p>
      </div>
    </section>

    <div class='container mx-auto px-2 md:px-4 max-w-6xl'>
      <!-- Contact Grid -->
      <div
        class='bg-white px-2 md:px-4 py-4 md:py-6 grid grid-cols-1 lg:grid-cols-2 gap-12'>
        <!-- Left: Hospital Details -->
        <aside class='space-y-8 lg:sticky top-12'>
          <!-- Emergency Contact -->
          <div
            class='bg-red-50 border-l-4 border-red-600 p-4 rounded-xl shadow-sm'>
            <h2 class='text-xl font-bold text-accent'>
              Emergency Hotline (24/7)
            </h2>
            <a
              href='tel:+254111817447'
              class='block mt-2 text-2xl font-extrabold text-red-600 hover:underline'>
              +254111817447
            </a>
          </div>

          <!-- General Contact -->
          <div>
            <h2 class='text-2xl font-bold text-gray-800 mb-4'>Our Details</h2>
            <ul class='space-y-4 text-gray-700'>
              <li class='flex items-center space-x-3'>
                <span class='text-indigo-600 text-xl'>üìû</span>
                <a
                  href='tel:+254701234567'
                  class='text-lg font-medium hover:text-indigo-600 transition'>
                  +254111817447
                </a>
              </li>
              <li class='flex items-center space-x-3'>
                <span class='text-indigo-600 text-xl'>üìß</span>
                <a
                  href='mailto:info@spmh.co.ke'
                  class='text-lg font-medium hover:text-indigo-600 transition'>
                  hospital.stpauls@yahoo.com
                </a>
              </li>

              <li class='flex items-start space-x-3'>
                <span class='text-indigo-600 text-xl flex-shrink-0 mt-1'
                  >üìç</span
                >
                <span class='text-lg font-medium'>
                  Off Homa Bay-Rongo Road, Homa Bay Town, Kenya
                </span>
              </li>
            </ul>
          </div>

          <!-- Hospital Hours -->
          <div>
            <h2 class='text-2xl font-bold text-gray-800 mb-4'>
              Hospital Hours
            </h2>
            <p class='text-lg text-gray-700'>
              <span class='font-semibold text-secondary'
                >Open 24 hours a day, 7 days a week.</span
              ><br />
              We are always here to care for you ‚Äî day or night.
            </p>
          </div>

          <!-- Map (OpenStreetMap) -->
          <section class='mt-12'>
            <div class='flex items-center gap-4 mb-8'>
              <div class='h-6 w-1 bg-primary'></div>
              <div>
                <h2
                  class='text-2xl font-black uppercase tracking-tighter leading-none'>
                  Find us
                </h2>
                
              </div>
            </div>

            <div
              class='relative w-full aspect-video md:aspect-[21/9] overflow-hidden'>
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.742385312345!2d34.4607123!3d-0.5255383!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x19d52f95c5555555%3A0x5555555555555555!2sSt.%20Paul's%20Mission%20Hospital!5e0!3m2!1sen!2ske!4v1700000000000!5m2!1sen!2ske"
                class='absolute inset-0 w-full h-full border-0 grayscale-[0.2] contrast-[1.1]'
                allowfullscreen=''
                loading='lazy'
                referrerpolicy='no-referrer-when-downgrade'
                title="St. Paul's Mission Hospital Interactive Map">
              </iframe>
            </div>
          </section>
        </aside>

        <!-- Contact Form -->

        <section>
          <h2 class='text-2xl font-bold text-secondary mb-6'>
            Send Us a Message
          </h2>

          <form
            action='https://formspree.io/f/movnbakk'
            method='POST'
            class='space-y-6'>
            <!-- Full Name -->
            <div class='relative z-0 w-full group'>
              <input
                type='text'
                name='fullName'
                id='fullName'
                class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-accent peer'
                placeholder=' '
                required
              />
              <label
                for='fullName'
                class='absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-accent peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
                >Full Name</label
              >
            </div>

            <!-- Email -->
            <div class='relative z-0 w-full group'>
              <input
                type='email'
                name='emailAddress'
                id='emailAddress'
                class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-accent peer'
                placeholder=' '
                required
              />
              <label
                for='emailAddress'
                class='absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-accent peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
                >Email Address</label
              >
            </div>

            <!-- Subject -->
            <div class='relative z-0 w-full group'>
              <input
                type='text'
                name='subject'
                id='subject'
                class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-accent peer'
                placeholder=' '
              />
              <label
                for='subject'
                class='absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-accent peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
                >Subject</label
              >
            </div>

            <!-- Message -->
            <div class='relative z-0 w-full group'>
              <textarea
                name='message'
                id='message'
                rows='4'
                class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-accent peer'
                placeholder=' '
                required></textarea>
              <label
                for='message'
                class='absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-accent peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
                >Message</label
              >
            </div>

            <!-- Submit -->
            <div class='flex justify-center mt-8'>
              <button
                type='submit'
                class='px-8 py-3 bg-accent text-white font-semibold rounded-full shadow-md hover:bg-accent focus:ring-2 focus:ring-offset-2 focus:ring-accent transition'>
                Send Message
              </button>
            </div>
          </form>
        </section>
      </div>
    </div>
  </main>
</Layout>
