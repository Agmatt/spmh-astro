---
import Layout from '../../Layout/Layout.astro';
import { Image } from 'astro:assets'; // Using Astro's optimization

// Missions & Vision Data
const statements = [
  {
    label: 'Our Purpose',
    title: 'The Mission',
    content:
      'To facilitate the provision of quality, cost-effective, promotive, preventive, and curative services to all, particularly the underprivileged — all in accordance with the mission of Christ. ',
    highlight: true,
  },
  {
    label: 'Our Goal',
    title: 'The Vision',
    content:
      'To be a center of excellence in the provision of personalized healthcare in the community and beyond.',
    highlight: false,
  },
];

// Values Data
const values = [
  {
    id: '01',
    title: 'Christ Centered',
    desc: "Our healing ministry is a direct extension of Christ's love and compassion.",
  },
  {
    id: '02',
    title: 'Commitment',
    desc: 'An unwavering dedication to every life that enters our doors.',
  },
  {
    id: '03',
    title: 'Teamwork',
    desc: 'The seamless collaboration of medical minds for superior outcomes.',
  },
  {
    id: '04',
    title: 'Accountability',
    desc: "Transparent stewardship of our patients' trust and medical integrity.",
  },
  {
    id: '05',
    title: 'Human Rights',
    desc: 'Ensuring dignity, privacy, and respect for every individual.',
  },
  {
    id: '06',
    title: 'Competence',
    desc: 'Constant pursuit of the latest medical advancements and excellence.',
  },
];
---

<Layout title='Mission, Vision & Values'>
  <!-- Hero section -->
  <section
    id='about'
    class='relative w-full h-[40vh] sm:h-[60vh] overflow-hidden bg-slate-900'>
    <div class='absolute inset-0'>
      <img
        src='/img/17.jpg'
        alt='Hospital Exterior'
        loading='lazy'
        class='w-full h-full object-cover object-top opacity-70 scale-105'
      />
    </div>

    <div
      class='absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/20 to-transparent'>
    </div>

    <div
      class='relative z-10 h-full container mx-auto px-6 max-w-7xl flex flex-col justify-end pb-12 sm:pb-20'>
      <div class='mb-4 flex items-center gap-3' data-aos='fade-up'></div>

      <h1
        class='text-4xl sm:text-5xl lg:text-6xl font-bold text-white tracking-tighter leading-none'
        data-aos='fade-up'
        data-aos-delay='100'>
        Our <br />
        <span class='font-serif font-light opacity-90'>Mission</span>
      </h1>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section
    id='mission'
    class='relative py-16 bg-white border-b border-gray-100'>
    <div class='flex flex-col lg:flex-row min-h-[80vh] items-stretch'>
      <div class='lg:w-1/2 relative min-h-[300px] bg-gray-100 overflow-hidden'>
        <img
          src='/img/6.jpg'
          loading='lazy'
          alt='Clinical Excellence'
          class='absolute inset-0 w-full h-full object-cover filter grayscale-[0.2] hover:grayscale-0 transition-all duration-1000'
        />
      </div>

      <div
        class='lg:w-1/2 flex items-center justify-center py-16 px-6 lg:px-24'>
        <div class='max-w-xl w-full space-y-24'>
          {
            statements.map((s) => (
              <div class='group relative'>
                <div class='space-y-4'>
                  <span class='text-[10px] font-bold tracking-[0.5em] text-primary uppercase opacity-60'>
                    {s.label}
                  </span>
                  <h3 class='text-4xl font-light text-gray-900 tracking-tight'>
                    {s.title}
                  </h3>
                  <p
                    class={`text-xl leading-relaxed ${s.highlight ? 'text-gray-800 font-medium italic' : 'text-gray-500'}`}>
                    {s.content}
                  </p>
                </div>

                <div class='mt-8 w-12 h-[1px] bg-gray-300 group-hover:w-24 group-hover:bg-primary transition-all duration-500' />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <style>
    /* Optional: Smooth reveal on scroll */
    #mission {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards;
    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>

  <!-- Values -->
  <section class='py-20 bg-gray-50'>
    <div class='container mx-auto px-2 md:px-4 max-w-5xl'>
      <div class='border-b border-accent pb-12 mb-10'>
        <h2 class='text-4xl md:text-5xl font-semibold mt-4'>Our Heritage</h2>
      </div>
      <h2 class='grid
          grid-cols-1
          gap-0'>
        {
          values.map((v) => (
            <div class='group relative border-b border-accent py-8 transition-all duration-700 hover:bg-white px-2 md:px-4'>
              <div class='flex flex-col md:flex-row md:items-start gap-8'>
                <div class='flex-1'>
                  <h3 class='text-2xl md:text-3xl font-medium text-gray-800 group-hover:translate-x-2 transition-transform duration-500'>
                    {v.title}
                  </h3>
                </div>

                <div class='flex-1 max-w-md'>
                  <p class='text-gray-500 text-lg leading-relaxed group-hover:text-gray-800 transition-colors duration-500'>
                    {v.desc}
                  </p>
                </div>

                <div class='hidden md:block opacity-0 group-hover:opacity-100 transition-all duration-500 transform -translate-x-4 group-hover:translate-x-0'>
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    width='24'
                    height='24'
                    viewBox='0 0 24 24'
                    fill='none'
                    stroke='currentColor'
                    stroke-width='1.5'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    class='text-primary'>
                    <path d='M5 12h14m-7-7 7 7-7 7' />
                  </svg>
                </div>
              </div>

              <div class='absolute bottom-0 left-0 h-[2px] bg-primary w-0 group-hover:w-full transition-all duration-700 ease-in-out' />
            </div>
          ))
        }
      </h2>

      <div class='mt-20 text-center'>
        <p class='text-sm text-gray-400 font-medium tracking-widest uppercase'>
          Safe Hands • Caring Hearts
        </p>
      </div>
    </div>
  </section>
</Layout>
