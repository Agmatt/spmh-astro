            class={`flex flex-col lg:flex-row gap-16 mb-40 last:mb-0 items-center ${i % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
            <div class='lg:w-1/2 relative'>
              <div class='p-4 bg-[#F3F2EE] rounded-sm shadow-sm'>
                <img
                  src={item.image}
                  alt={item.title}
                  class='w-full aspect-video object-cover grayscale sepia-[.2] hover:grayscale-0 transition-all duration-700'
                />
                <p class='mt-4 text-[9px] font-mono uppercase tracking-widest text-stone-400'>
                  {item.tag}
                </p>
              </div>
              <div
                class={`absolute -bottom-6 ${i % 2 !== 0 ? '-right-6' : '-left-6'} bg-[#860f0f] text-white p-6 hidden md:block`}>
                <p class='text-xs font-bold uppercase tracking-widest'>
                  {item.highlight}
                </p>
              </div>
            </div>

            <div class='lg:w-1/2'>
              <h2 class='text-3xl md:text-5xl font-bold text-[#125276] mb-8 leading-tight uppercase tracking-tighter'>
                {item.title}
              </h2>
              <p class='text-xl text-slate-500 font-light leading-relaxed mb-8'>
                {item.content}
              </p>
              <div class='h-px w-20 bg-stone-200' />
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class='py-24 bg-[#F3F2EE]'>
    <div class='container mx-auto px-6 max-w-5xl'>
