    story.map((item, i) => (
      <section class='py-32 bg-white flex items-center border-b border-slate-50'>
        <div class='container mx-auto px-6 max-w-6xl'>
          <div class='grid lg:grid-cols-2 gap-16 items-center'>
            <div class={i % 2 === 0 ? 'order-1' : 'order-1 lg:order-2'}>
              <div class='relative'>
                <span class='text-[14vw] font-black text-slate-50 leading-none'>
                  {i + 1}
                </span>
                <div class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full text-center'>
                  <span class='text-[#860f0f] font-mono text-xs uppercase tracking-[0.4em] font-black'>
                    {item.chapter}
                  </span>
                </div>
              </div>
            </div>

            <div class={i % 2 === 0 ? 'order-2' : 'order-2 lg:order-1'}>
              <h3 class='text-xs font-black uppercase tracking-[0.3em] text-[#1565c0] mb-6'>
                // {item.theme}
              </h3>
              <h2 class='text-4xl md:text-5xl font-black text-[#125276] uppercase tracking-tighter mb-8 leading-none'>
                {item.title}
              </h2>
              <p class='text-2xl md:text-3xl font-light text-slate-500 leading-snug tracking-tight italic'>
                "{item.quote}"
              </p>
            </div>
          </div>
        </div>
      </section>
    ))
  }

  <section class='py-40 bg-slate-50 relative overflow-hidden'>
    <div class='container mx-auto px-6 max-w-4xl text-center relative z-10'>
      <div
        class='mb-12 inline-block p-4 border-2 border-[#125276] rounded-full'>
        <div
          class='w-16 h-16 bg-[#125276] rounded-full flex items-center justify-center text-white font-serif text-3xl'>
          †
        </div>
      </div>

      <h2
        class='text-3xl md:text-5xl font-black text-[#125276] uppercase tracking-tighter mb-10'>
        Governance & Faith
      </h2>

      <div
