              <div
                class={`${point.side === 'right' ? 'text-left' : 'md:text-right'}`}>
                <span class='text-7xl md:text-9xl font-black text-slate-50 leading-none block mb-4'>
                  {point.year}
                </span>
                <h3 class='text-xs font-black uppercase tracking-widest text-[#1565c0] mb-4 underline underline-offset-8 decoration-slate-200'>
                  {point.subtitle}
                </h3>
                <p class='text-slate-600 text-lg font-light leading-relaxed'>
                  {point.text}
                </p>
              </div>
            </div>

            <div class='hidden md:flex md:w-px justify-center z-10 relative'>
              <div class='w-4 h-4 rounded-full bg-white border-4 border-[#125276]' />
            </div>

            <div class='md:w-1/2' />
          </div>
        ))
      }
