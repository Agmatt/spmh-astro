---
import Layout from '../../Layout/Layout.astro';

const tenders = [
  // {
  //   id: 'SPMH/TND/2026/001',
  //   title: 'Supply of Medical Oxygen & Maintenance of Oxygen Plant',
  //   category: 'Critical Infrastructure',
  //   status: 'Open',
  //   closingDate: 'Feb 15, 2026',
  //   link: '#',
  // },
  {
    id: 'SPMH/TND/2026/002',
    title:
      'Annual Supply of Non-Pharmaceutical Consumables (Gloves, Gauze, Syringes)',
    category: 'Non-Pharms',
    status: 'Open',
    closingDate: 'Feb 20, 2026',
    link: '#',
  },
  // {
  //   id: 'SPMH/TND/2026/003',
  //   title: 'Provision of Hospital Catering & Nutrition Services',
  //   category: 'Catering',
  //   status: 'Under Evaluation',
  //   closingDate: 'Jan 10, 2026',
  //   link: '#',
  // },
];
---

<Layout title='Tenders'>
  <main class='bg-slate-50 min-h-screen pb-20'>
    <div class='bg-secondary text-white py-16 px-4'>
      <div class='max-w-6xl mx-auto'>
        <h1 class='text-4xl text-white font-bold mb-4 tracking-tight'>
          Tenders & Supplier Opportunities
        </h1>
        <p class='text-blue-100 max-w-2xl text-lg leading-relaxed'>
          Join our mission. We partner with suppliers who share our commitment
          to patient safety, ethical sourcing, and clinical excellence.
        </p>
      </div>
    </div>

    <!-- Supplier Links -->
    <div class='max-w-6xl mx-auto px-4 -mt-8'>
      <div class='grid grid-cols-1 lg:grid-cols-4 gap-8'>
        <aside class='lg:col-span-1 space-y-6'>
          <div
            class='bg-white p-6 rounded-2xl shadow-sm border border-slate-200'>
            <h3 class='font-bold text-slate-800 mb-4'>Supplier Links</h3>
            <ul class='space-y-3 text-sm'>
              <li>
                <a
                  href='/about-us/supplier-registration'
                  class='text-blue-600 hover:text-blue-800 flex items-center'>
                  <span class='mr-2'>→</span> Supplier Registration
                </a>
              </li>
              <li>
                <a
                  href='/docs/Code-of-Conduct.pdf'
                  class='text-blue-600 hover:text-blue-800 flex items-center'>
                  <span class='mr-2'>→</span> Code of Conduct (PDF)
                </a>
              </li>
              <li>
                <a
                  href='/docs/Procurement-Policy.pdf'
                  class='text-blue-600 hover:text-blue-800 flex items-center'>
                  <span class='mr-2'>→</span> Procurement Policy
                </a>
              </li>
            </ul>
          </div>

          <div class='bg-blue-50 p-6 rounded-2xl border border-blue-100'>
            <p class='text-xs font-bold text-blue-800 uppercase mb-2'>Notice</p>
            <p class='text-sm text-blue-700 leading-snug'>
              All bids must be submitted through our digital portal by 5:00 PM
              EAT on the closing date.
            </p>
          </div>
        </aside>

        <section class='lg:col-span-3'>
          <div
            class='bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden'>
            <div
              class='p-6 border-b border-slate-100 flex justify-between items-center bg-white'>
              <h2 class='text-xl font-bold text-slate-800'>
                Active Opportunities
              </h2>
              <span
                class='bg-slate-100 text-slate-600 px-3 py-1 rounded-full text-xs font-bold'>
                {tenders.length} Total Notices
              </span>
            </div>

            <div class='overflow-x-auto'>
              <table class='w-full text-left'>
                <thead class='bg-slate-50 border-b border-slate-100'>
                  <tr>
                    <th
                      class='px-6 py-4 text-xs font-bold text-slate-500 uppercase'
                      >Tender Ref & Title</th
                    >
                    <th
                      class='px-6 py-4 text-xs font-bold text-slate-500 uppercase'
                      >Status</th
                    >
                    <th
                      class='px-6 py-4 text-xs font-bold text-slate-500 uppercase text-right'
                      >Action</th
                    >
                  </tr>
                </thead>
                <tbody class='divide-y divide-slate-100'>
                  {
                    tenders.map((tender) => (
                      <tr class='hover:bg-slate-50 transition-colors group'>
                        <td class='px-6 py-6'>
                          <span class='text-xs font-mono text-blue-600 block mb-1'>
                            {tender.id}
                          </span>
                          <span class='text-slate-800 font-bold block group-hover:text-blue-700 transition'>
                            {tender.title}
                          </span>
                          <span class='text-xs text-slate-400 block mt-1'>
                            Closing: {tender.closingDate}
                          </span>
                        </td>
                        <td class='px-6 py-6'>
                          <span
                            class={`px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest ${
                              tender.status === 'Open'
                                ? 'bg-green-100 text-green-700'
                                : 'bg-amber-100 text-amber-700'
                            }`}>
                            {tender.status}
                          </span>
                        </td>
                        <td class='px-6 py-6 text-right'>
                          <a
                            href={tender.link}
                            class='inline-flex items-center px-4 py-2 bg-slate-800 text-white text-xs font-bold rounded-lg hover:bg-blue-700 transition shadow-sm'>
                            View Details
                          </a>
                        </td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>
          </div>

          <p class='mt-6 text-center text-sm text-slate-400 italic'>
            Can't find what you're looking for? Email <a
              href='mailto:procurement@stpauls.org'
              class='underline'>procurement@stpauls.org</a
            >
          </p>
        </section>
      </div>
    </div>
  </main>
</Layout>
