---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import '../styles/global.css';
import 'aos/dist/aos.css';
const { title = 'St Pauls Mission Hospital' } = Astro.props;
---

<script>
  import AOS from 'aos';
  AOS.init({
    duration: 800,
    once: true,
  });
</script>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <link rel='icon' type='image/svg+xml' href='/file.svg' />

    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      type='text/css'
      href='https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/bold/style.css'
    />
    <script src='https://cdn.tailwindcss.com'></script>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <!-- Copyright Section -->
    <div class='bg-[#1c6d9c] text-white text-sm'>
      <div
        class='max-w-6xl mx-auto px-6 py-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4'>
        <!-- Footer Links -->
        <ul
          class='flex flex-wrap justify-center md:justify-start gap-4 font-medium'>
          <li>
            <a href='/privacy-policy' class='hover:underline'>Privacy Policy</a>
          </li>
          <li>
            <a href='/about-us/contact' class='hover:underline'>Contact</a>
          </li>
          <li><a href='/faq' class='hover:underline'>FAQ</a></li>
        </ul>

        <!-- Copyright -->
        <p class='text-center md:text-right w-full md:w-auto'>
          &copy; {new Date().getFullYear()} St. Paulâ€™s Mission Hospital | All Rights
          Reserved |
          <span class='text-teal-300'>Designed by Editorial Team</span>
        </p>
      </div>
    </div>
  </body>
  <script src='https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js'
  ></script>
</html>
